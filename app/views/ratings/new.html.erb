<h2>Create new rating</h2>

<%= form_for(@rating) do |f| %>
  <div class="field">
  <%= f.label :beer %><br>
    <%= f.select :beer_id, options_from_collection_for_select(@beers, :id, :to_s) %>
  </div>
  <div class="field">
    <%= f.label :score %><br>
    <%= f.text_field :score %>
  </div>

	<%= f.submit %>
<% end %>